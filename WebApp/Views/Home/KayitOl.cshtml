
@model Data.Entities.Kullanici
    <section>
        <div class="content">

            <div class="container" style="background-color: beige">
        <div class="row align-items-stretch justify-content-center no-gutters">
            <div class="col-md-7">
                <div class="form h-100 contact-wrap p-5">
                    <h3 class="text-center" style="color: dodgerblue">Üyelik işlemleri</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <center>
                        <form class="col-md-12 align-items-center" action="/Home/KayitOl" method="post" id="contactForm" novalidate="novalidate">
                            <div class="row">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-12 form-group align-items-center">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.KullaniciAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(m => m.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", @type = "isim", placeholder = "İsim" } })
                                            @Html.ValidationMessageFor(m => m.KullaniciAdi, "", new { @class = "text-danger" })
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group align-items-center">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.KullaniciSoyadi, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(m => m.KullaniciSoyadi, new { htmlAttributes = new { @class = "form-control", @type = "soyisim", placeholder = "Soyisim" } })
                                            @Html.ValidationMessageFor(m => m.KullaniciSoyadi, "", new { @class = "text-danger" })
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group align-items-center">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Kullanicimail, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(m => m.Kullanicimail, new { htmlAttributes = new { @class = "form-control", @type = "email", placeholder = "Email" } })
                                            @Html.ValidationMessageFor(m => m.Kullanicimail, "", new { @class = "text-danger" })
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group align-items-center">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(m => m.Sifre, new { htmlAttributes = new { @class = "form-control", @type = "password", placeholder = "Password" } })
                                            @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12 align-items-center">
                                <div style="padding-left:0px">
                                    <div class="form-group">

                                        <input type="checkbox" id="f-option2" name="selector">
                                        <label for="f-option2">Müzayede Kuralları, Kullanıcı Sözleşmesi, Gizlilik Politikası ve Kişisel Verilerin Korunması' nı kabul ediyorum .</label>

                                    </div>
                                </div>
                            </div>
                            &nbsp;

                            <div class="form-group align-items-center">
                                <button class="btn btn-primary" type="submit">Sign Up</button>

                            </div>

                            <div class="align-items-center">
                                <a class="already" href="#">You already have an account? Login here.</a>
                            </div>



                        </form>
                        </center>


                    }
                </div>
            </div>
            </div>
            </div>
        </div>
    </section>

 
